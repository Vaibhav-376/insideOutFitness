generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Lead {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  fullName  String
  email     String
  phone     String
  goal      FitnessGoal
  message   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
  @@index([phone])
  @@index([createdAt])
}

enum FitnessGoal {
  WEIGHT_LOSS
  MUSCLE_GAIN
  STRENGTH_TRAINING
  GENERAL_FITNESS
}
